<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewStyleNormal"
    android:layout_marginTop="@dimen/margin_normal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.paddy.edcastdemo.app.utils.CircularNetworkImageView
            android:id="@+id/pictureView"
            android:layout_width="@dimen/profile_pic"
            android:layout_height="@dimen/profile_pic"
            android:layout_marginTop="@dimen/margin_large"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"></com.paddy.edcastdemo.app.utils.CircularNetworkImageView>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pictureView"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_toEndOf="@+id/pictureView"
            android:layout_toRightOf="@+id/pictureView"
            android:text="Prashant Patil"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nameTextView"
            android:layout_alignStart="@+id/nameTextView"
            android:layout_below="@+id/nameTextView"
            android:layout_marginTop="@dimen/margin_small"
            android:text="paddypatil90@gmail.com"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
