<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        style="@style/CardViewStyleNormal"
        android:layout_margin="@dimen/margin_normal"
        android:background="@drawable/ripple_effect_card_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.paddy.edcastdemo.app.utils.CircularNetworkImageView
                android:id="@+id/pictureView"
                android:layout_width="@dimen/profile_pic"
                android:layout_height="@dimen/profile_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_large"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pictureView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_normal"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_xxlarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_normal" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>